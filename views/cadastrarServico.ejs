<!DOCTYPE html>
<html>

<head>
    <%- include ("./includes/head.ejs") %>
</head>

<body>

    <%- include ("./includes/header.ejs") %>

        <div class="container text-center mt-5 ">
            <%- include('includes/messages'); %>
                <div class="row position-relative">
                    <div class="col align-middle mt-auto mb-auto">
                        <div class="col mt-auto mb-auto">
                            <fieldset class="border border-2 rounded">
                                <h3 class="my-4">Cadastrar ordem de servico</h3>
                                <form name="registerForm" method="post" action="/cadastrar">
                                    <div class="row">
                                        <div class="col mb-3">
                                            <label for="desc">Descrição:</label>
                                        </div>
                                        <div class="col mb-3 me-3">
                                            <input required class="form-control border border-dark-subtle" type="text"
                                                name="login">
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col mb-3">
                                            <label for="name">Tipo de renderização:</label>
                                        </div>
                                        <div class="col mb-3 me-3">
                                           <div class="mb-3">
                                            <select required class="form-select form-select-sm border border-dark-subtle" name="tipo">
                                                <option selected disabled>Selecione uma opção</option>
                                                <option value="Off-Line">Off-Line</option>
                                                <option value="Real Time">Real Time</option>
                                            </select>
                                           </div>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col mb-3">
                                            <label for="tel">Altura:</label>
                                        </div>
                                        <div class="col mb-3 me-3">
                                            <input required class="form-control border border-dark-subtle" type="number" step=0.01 max="1000" min="0.01" value="0,00"name="altura">
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col mb-3">
                                            <label for="largura">Largura:</label>
                                        </div>
                                        <div class="col mb-3 me-3">
                                            <input required class="form-control border border-dark-subtle" type="number" step=0.01 max="1000" min="0.01" value="0,00"name="largura">
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col mb-3">
                                            <label for="tel">Comprimento:</label>
                                        </div>
                                        <div class="col mb-3 me-3">
                                            <input required class="form-control border border-dark-subtle" type="number" step=0.01 max="1000" min="0.01" value="0,00"name="altura">
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col mb-3">
                                            <label for="tel">Custo:</label>
                                        </div>
                                        <div class="col mb-3 me-3">
                                            <input class="form-control"  disabled readonly type="number" value="0" >
                                        </div>
                                    </div>
                                    <div class="mb-3">
                                        <button type="submit" class="btn btn-primary">Registrar!</button>
                                    </div>
                                </form>
                            </fieldset>
                        </div>
                    </div>
                </div>
            </div>
        </body>


</html>